root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.yml]
indent_size = 2
max_line_length = 120

[*.toml]
indent_size = 2
max_line_length = 120

[*.py]
max_line_length = 88
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
flake8_max_line_length = 88
flake8_ignore = E203, E266, E501, W503, F403, F401
select = B,C,E,F,W,T4,B9
max_complexity = 10
per-file-ignores =
    __init__.py: F401 # Ignore unused imports in __init__.py files    
    tests/*: D101,D102,D103 # Ignore missing docstring warnings in tests
    
