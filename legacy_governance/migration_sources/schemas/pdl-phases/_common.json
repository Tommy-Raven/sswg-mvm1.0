{
  "$id": "https://schemas.sswg.local/pdl-phases/_common.json#",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "sswg pdl phase common definitions",
  "$defs": {
    "io_item": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "pattern": "^[a-z][a-z0-9_\\-]*$" },
        "type": { "type": "string", "minLength": 1 },
        "description": { "type": "string" }
      }
    },
    "failure_label": {
      "type": "object",
      "additionalProperties": false,
      "required": ["Type", "message"],
      "properties": {
        "Type": {
          "type": "string",
          "enum": [
            "deterministic_failure",
            "schema_failure",
            "io_failure",
            "tool_mismatch",
            "reproducibility_failure"
          ]
        },
        "message": { "type": "string", "minLength": 1 },
        "phase_id": { "type": "string" },
        "evidence": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },
    "phase_base": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "name",
        "type",
        "enabled",
        "description",
        "inputs",
        "outputs",
        "handler"
      ],
      "properties": {
        "name": { "type": "string" },
        "type": {
          "type": "string",
          "enum": [
            "data",
            "normalize",
            "parse",
            "analysis",
            "generation",
            "validation",
            "comparison",
            "interpretation",
            "logging"
          ]
        },
        "enabled": { "type": "boolean" },
        "description": { "type": "string", "minLength": 1 },
        "inputs": { "type": "array", "items": { "$ref": "#/$defs/io_item" } },
        "outputs": { "type": "array", "items": { "$ref": "#/$defs/io_item" } },
        "handler": { "type": "string", "pattern": "^[a-zA-Z0-9_.:]+$" },
        "constraints": {
          "type": "object",
          "additionalProperties": true
        },
        "failure": {
          "description": "If present, must include a typed failure label.",
          "$ref": "#/$defs/failure_label"
        }
      }
    }
  }
}
